.dropdown
  position relative

  display block
  overflow visible !important

  box-sizing border-box
  padding 2px

  color rgb(0,0,0)
  border 1px solid #c0cad5
  background #fff

  font-family 'Lucida Grande', Arial, tahoma, verdana, sans-serif
  font-size 12px
  font-weight: normal;
  font-smoothing: subpixel-antialiased;

.dropdown__input
  z-index 1

  float left

  box-sizing border-box
  width 100%
  margin 0

  color rgba(0,0,0,.9)
  padding 2px 6px 6px
  border 0
  outline 0


.clear
  float none
  clear both


.dropdown__inner
  position absolute
  width calc(100% + 2px)
  top 27px
  left -1px
  z-index 2

  box-sizing border-box
  border 1px solid #c0cad5

.dropdown__item
  box-sizing border-box
  padding 4px 6px
  border-bottom 1px solid #c0cad5
  min-height 30px
  background white
  
  &.active
    background #f1f5f9

  & .name
    margin-bottom 4px
    cursor pointer
    line-height 1.167

  & .sub
    font-size 12px
    color #777777
    white-space nowrap
    text-overflow ellipsis

  & .thumb
    margin-right: 8px
    width 38px
    height 36px
    overflow hidden
    float left
    border-radius 2px

